<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item> 
    </style>
    
    <!-- 20140221 added by michael
    custom preference dialog style -->
    <style name="CenterDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowTitleStyle">@style/CenterDialogTitle</item>
        <item name="android:windowNoTitle">false</item>
    </style>

    <style name="CenterDialogTitle" parent="@android:style/TextAppearance.DialogWindowTitle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:background">#FF555555</item>
    </style>
    
    <!-- 20131213 added by michael -->
    <style name="AppTheme_title" parent="AppBaseTheme">
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:windowActionModeOverlay">true</item>
        
    </style>
    <!-- <item name="android:actionButtonStyle">@style/myActionButtonStyle</item> -->

    
    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">
    </style>

    <!-- 各API通用的基底theme -->
    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat">
        <item name="windowNoTitle">true</item>
        <!-- 不需要 ActionBar 了,因為改用Toolbar -->
        <item name="windowActionBar">false</item>
        <!-- 主要顏色 -->
        <item name="colorPrimary">@color/color_primary</item>
        <!-- 狀態欄背景色 -->
        <item name="colorPrimaryDark">@color/color_primaryDark</item>
        <item name="colorAccent">@color/color_accent</item>
        <!-- 其他可用項目 colorControlNormal, colorControlActivated, colorControlHighlight, colorSwitchThumbNormal -->
    </style>
    
    <style name="myActionButtonStyle" parent="@android:style/Widget.Holo.Light.ActionButton">
    <item name="android:minHeight">0dip</item>
    <item name="android:minWidth">0dip</item>
    <item name="android:paddingLeft">0dip</item>
    <item name="android:paddingRight">0dip</item>
    <item name="height">0dp</item>
    <item name="android:width">0dp</item>
    </style>
</resources>
