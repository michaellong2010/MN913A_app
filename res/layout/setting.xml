<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.12"
        android:background="@drawable/top_border" >

        <TextView
            android:id="@+id/main_title_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/main_title_setting"
            android:textColor="@android:color/white"
            android:fontFamily="Calibri"
            android:textSize="10pt"
            android:layout_marginLeft="120dp" />
        
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/setting"
            android:clickable="false" />
        
        <ImageButton
            android:id="@+id/main_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_home"
            android:onClick="switch_to_main_page" />
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mn_913a_ui_bg"
        android:layout_weight="0.76" >
        
        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="400dp"
            android:layout_height="125dp"
            android:layout_marginLeft="102dp"
            android:layout_marginTop="116dp"
            android:background="@drawable/btn_calibration2" />
        
        <ImageButton
             android:id="@+id/imageButton2"
             android:layout_width="400dp"
             android:layout_height="125dp"
             android:layout_marginLeft="102dp"
             android:layout_marginTop="295dp"
             android:background="@drawable/btn_lcd_brightness" />
        
        <ImageButton
             android:id="@+id/imageButton3"
             android:layout_width="400dp"
             android:layout_height="125dp"
             android:layout_marginLeft="625dp"
             android:layout_marginTop="116dp"
             android:background="@drawable/btn_time_date" />
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.12"
        android:background="@drawable/bottom_border" >
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="TextView"
            android:id="@+id/lbltime"
            android:textColor="@android:color/white"
            android:fontFamily="Calibri"
            android:textSize="10pt" />
    </RelativeLayout>
</LinearLayout>
